<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.BTApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/beige</item>
        <item name="colorPrimaryVariant">@color/sandy_tan</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <!-- Text field hint and underline color -->
        <item name="colorControlNormal">@color/grey</item>

        <!-- Background color of TextInputEditText -->
        <item name="textInputStyle">@style/CustomTextInputStyle</item>

        <!-- Center the title in the toolbar -->
        <item name="toolbarStyle">@style/CenteredToolbar</item>
    </style>

    <!-- Centered Toolbar -->
    <style name="CenteredToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
    </style>

    <!-- Custom TextInput Style -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <!-- AppBar Overlay -->
    <style name="Theme.BTApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customizations for the AppBar can be added here -->
    </style>

    <!-- Popup Overlay -->
    <style name="Theme.BTApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Customizations for the Popup can be added here -->
    </style>
</resources>
